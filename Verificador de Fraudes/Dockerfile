FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1     PYTHONUNBUFFERED=1

# System deps for Tesseract and libmagic (python-magic)
RUN apt-get update && apt-get install -y --no-install-recommends     tesseract-ocr libtesseract-dev libmagic1     && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

COPY . /app

EXPOSE 8000
